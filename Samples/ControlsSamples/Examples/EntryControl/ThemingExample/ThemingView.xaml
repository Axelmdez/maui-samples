<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        xmlns:local="clr-namespace:QSF.Examples.EntryControl.ThemingExample"
                        x:Class="QSF.Examples.EntryControl.ThemingExample.ThemingView">
    <VerticalStackLayout Padding="12, 24"
                         WidthRequest="{OnPlatform MacCatalyst=350, WinUI=350}"
                         HorizontalOptions="{OnPlatform MacCatalyst=Start, WinUI=Start}">
        <telerik:RadEntry AutomationId="entry"
                          Placeholder="Enter text"
                          MaxLength="20" />
    </VerticalStackLayout>
</telerik:RadContentView>