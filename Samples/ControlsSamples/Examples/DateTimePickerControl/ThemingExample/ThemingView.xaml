<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        xmlns:local="clr-namespace:QSF.Examples.DateTimePickerControl.ThemingExample"
                        x:Class="QSF.Examples.DateTimePickerControl.ThemingExample.ThemingView">
    <VerticalStackLayout Padding="12, 24"
                         Spacing="8"
                         WidthRequest="{OnPlatform MacCatalyst=350, WinUI=350}"
                         HorizontalOptions="{OnPlatform MacCatalyst=Start, WinUI=Start}">
        <Label Text="PickerMode - DropDown" />
        <telerik:RadDateTimePicker PickerMode="DropDown"
                                   AutomationId="dateTimePickerDropDown"
                                   Margin="0, 0, 0, 12" />
        <Label Text="PickerMode - Popup" />
        <telerik:RadDateTimePicker PickerMode="Popup"
                                   AutomationId="dateTimePickerPopup" />
    </VerticalStackLayout>
</telerik:RadContentView>