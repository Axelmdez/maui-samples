<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        xmlns:local="clr-namespace:QSF.Examples.SchedulerControl.ThemingExample"
                        x:Class="QSF.Examples.SchedulerControl.ThemingExample.ThemingView">
    <Grid>
        <telerik:RadScheduler AppointmentsSource="{Binding AppointmentsSource}"
                              DialogOpening="RadScheduler_DialogOpening">
            <telerik:RadScheduler.ViewDefinitions>
                <telerik:DayViewDefinition />
                <telerik:MultidayViewDefinition Title="3 Day" VisibleDays="3" />
                <telerik:WeekViewDefinition />
                <telerik:MonthViewDefinition />
            </telerik:RadScheduler.ViewDefinitions>
        </telerik:RadScheduler>
    </Grid>
</telerik:RadContentView>