<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        x:Class="QSF.Examples.SliderControl.ThemingExample.ThemingView">
    <VerticalStackLayout Padding="12, 24"
                         Spacing="8"
                         WidthRequest="{OnPlatform MacCatalyst=350, WinUI=350}"
                         HorizontalOptions="{OnPlatform MacCatalyst=Start, WinUI=Start}">
        <Label Text="Slider - Default" />
        <telerik:RadSlider x:Name="sliderDefault"
                           Minimum="0"
                           Maximum="100"
                           Value="30"
                           AutomationId="sliderDefault"
                           Margin="0, 0, 0, 12" />
        <Label Text="Slider - With Ticks and Labels" />
        <telerik:RadSlider x:Name="sliderTicksAndLabels"
                           Minimum="0"
                           Maximum="100"
                           Value="60"
                           TicksPlacement="End"
                           TickStep="5"
                           LabelsPlacement="End"
                           LabelStep="10"
                           AutomationId="sliderTicksAndLabels" />
    </VerticalStackLayout>
</telerik:RadContentView>
