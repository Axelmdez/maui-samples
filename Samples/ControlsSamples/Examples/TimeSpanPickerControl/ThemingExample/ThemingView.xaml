<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        xmlns:local="clr-namespace:QSF.Examples.TimeSpanPickerControl.ThemingExample"
                        x:Class="QSF.Examples.TimeSpanPickerControl.ThemingExample.ThemingView">
    <VerticalStackLayout Padding="12, 24"
                         Spacing="8"
                         WidthRequest="{OnPlatform MacCatalyst=350, WinUI=350}"
                         HorizontalOptions="{OnPlatform MacCatalyst=Start, WinUI=Start}">
        <Label Text="PickerMode - DropDown" />
        <telerik:RadTimeSpanPicker PickerMode="DropDown"
                                   AutomationId="timeSpanPickerDropDown"
                                   Margin="0, 0, 0, 12" />
        <Label Text="PickerMode - Popup" />
        <telerik:RadTimeSpanPicker PickerMode="Popup"
                                   AutomationId="timeSpanPickerPopup" />
    </VerticalStackLayout>
</telerik:RadContentView>