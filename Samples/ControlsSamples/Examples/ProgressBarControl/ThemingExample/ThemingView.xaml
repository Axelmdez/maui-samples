<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        x:Class="QSF.Examples.ProgressBarControl.ThemingExample.ThemingView">
    <VerticalStackLayout Padding="12, 24"
                         Spacing="12"
                         WidthRequest="{OnPlatform MacCatalyst=350, WinUI=350}"
                         HorizontalOptions="{OnPlatform MacCatalyst=Start, WinUI=Start}">
        <Label Text="ProgressBar - Default" />
        <telerik:RadLinearProgressBar x:Name="defaultProgressBar"
                                      Minimum="0"
                                      Maximum="100"
                                      Value="40"
                                      AutomationId="defaultProgressBar"
                                      Margin="0, 0, 0, 16" />
        <Label Text="ProgressBar - Display Progress Value" />
        <telerik:RadLinearProgressBar x:Name="displayValueProgressBar"
                                      Minimum="0"
                                      Maximum="100"
                                      Value="60"
                                      ValueDisplayMode="Value"
                                      AutomationId="displayValueProgressBar"
                                      Margin="0, 0, 0, 16" />
        <Label Text="ProgressBar - Indeterminate Mode" />
        <telerik:RadLinearProgressBar x:Name="indeterminateProgressBar"
                                      Minimum="0"
                                      Maximum="100"
                                      IsIndeterminate="True"
                                      AutomationId="indeterminateProgressBar" />
    </VerticalStackLayout>
</telerik:RadContentView>
