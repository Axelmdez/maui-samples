<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:local="clr-namespace:CryptoTracker.ViewModels"
             xmlns:formatters="clr-namespace:CryptoTracker.Formatters"
             xmlns:coinViews="clr-namespace:CryptoTracker.Views"
             x:Class="CryptoTracker.Views.CoinInfoView"
             x:Name="coinInfoView">

    <ContentView.BindingContext>
        <local:CoinInfoViewModel/>
    </ContentView.BindingContext>

    <telerik:RadTabView x:Name="tabView" HeaderItemStyle="{StaticResource TabViewHeaderStyle}">
        <telerik:TabViewItem HeaderText="Overview">
            <coinViews:CoinInfoChartView x:Name="coinInfoChartView" Padding="20,15,20,30"/>
        </telerik:TabViewItem>

        <telerik:TabViewItem HeaderText="Historical Data">
            <coinViews:CoinInfoDataGridView x:Name="coinInfoDataGridView" Padding="20,15,20,30"/>
        </telerik:TabViewItem>
    </telerik:RadTabView>
    
    
</ContentView>