<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.RichTextEditorControl.ToolbarCategory.AllToolbarItemsCSharpExample.AllToolbarItemsCSharp">
    <Grid RowDefinitions="Auto,*">
        <telerik:RadRichTextEditorToolbar x:Name="richTextToolbar"
                                          HeightRequest="60"
                                          RichTextEditor="{x:Reference richTextEditor}"
                                          AutoGenerateItems="False">
        </telerik:RadRichTextEditorToolbar>
        <telerik:RadRichTextEditor x:Name="richTextEditor" Grid.Row="1" />
    </Grid>
</ContentView>
