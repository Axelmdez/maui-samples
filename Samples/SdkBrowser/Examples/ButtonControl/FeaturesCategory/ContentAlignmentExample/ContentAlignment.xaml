<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.ButtonControl.FeaturesCategory.ContentAlignmentExample.ContentAlignment">
    <VerticalStackLayout WidthRequest="{OnPlatform WinUI=200, MacCatalyst=200}"
                         HorizontalOptions="{OnPlatform Default=StartAndExpand, Android=Fill, iOS=Fill}">
        <!-- >> button-content-alignment -->
        <telerik:RadButton Text="Telerik Button"
                           BorderThickness="1"
                           BorderColor="#DFDFDF"
                           VerticalContentAlignment="Start"
                           HorizontalContentAlignment="Start"
                           x:Name="button" />
        <!-- << button-content-alignment -->
    </VerticalStackLayout>
</ContentView>
