<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:local="clr-namespace:SDKBrowserMaui.Examples.CollectionViewControl.CommandsCategory.ItemTappedCommandExample"
             x:Class="SDKBrowserMaui.Examples.CollectionViewControl.CommandsCategory.ItemTappedCommandExample.ItemTappedCommand">
    <!-- >> collectionview-item-tapped-command -->
    <telerik:RadCollectionView ItemsSource="{Binding Source}"
                               ItemTapCommand="{Binding MyTapCommand}">
        <telerik:RadCollectionView.BindingContext>
            <local:CommandsViewModel/>
        </telerik:RadCollectionView.BindingContext>
    </telerik:RadCollectionView>
    <!-- << collectionview-item-tapped-command -->
</ContentView>
