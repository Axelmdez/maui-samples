<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        x:Class="SDKBrowserMaui.Examples.BorderControl.GettingStartedCategory.GettingStartedExample.BorderGettingStartedXaml"
                        Margin="5">
    <telerik:RadContentView.Content>
        <HorizontalStackLayout VerticalOptions="Start"
                               Spacing="4">
            <Image Source="samplebot.png"
                   WidthRequest="32"
                   HeightRequest="32" />
            <!-- >> border-getting-started-xaml -->
            <telerik:RadBorder BorderColor="#04A2AA"
                               CornerRadius="0, 8, 8, 0"
                               AutomationId="border"
                               BorderThickness="1">
                <Label Text="Hello! How can I help you today?" Margin="8" />
            </telerik:RadBorder>
            <!-- << border-getting-started-xaml -->
        </HorizontalStackLayout>
    </telerik:RadContentView.Content>
</telerik:RadContentView>