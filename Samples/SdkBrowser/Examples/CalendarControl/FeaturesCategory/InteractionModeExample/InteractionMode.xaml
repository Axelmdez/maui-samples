<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.CalendarControl.FeaturesCategory.InteractionModeExample.InteractionMode">
    <ScrollView>
        <VerticalStackLayout Spacing="10">
            <Label Text="InteractionMode = 'Pan'&#10;Change the current view by using pan gesture and buttons"/>
            <telerik:RadCalendar InteractionMode="Pan"/>
            <Label Text="InteractionMode = 'None'&#10;Change the current view by using the navigation buttons"/>
            <!-- >> calendar-interactionmode-none -->
            <telerik:RadCalendar InteractionMode="None"/>
            <!-- << calendar-interactionmode-none -->
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
