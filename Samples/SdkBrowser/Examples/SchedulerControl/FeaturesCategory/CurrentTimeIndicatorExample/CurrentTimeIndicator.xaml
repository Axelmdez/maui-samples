<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.SchedulerControl.FeaturesCategory.CurrentTimeIndicatorExample.CurrentTimeIndicator">
    <Grid>
        <!-- >> scheduler-current-time-indicator -->
        <telerik:RadScheduler>
            <telerik:RadScheduler.ViewDefinitions>
                <telerik:WeekViewDefinition IsCurrentTimeIndicatorVisible="False" />
                <telerik:MultidayViewDefinition IsCurrentTimeIndicatorVisible="False" VisibleDays="3" Title="3 Days" />
                <telerik:DayViewDefinition IsCurrentTimeIndicatorVisible="True" />
            </telerik:RadScheduler.ViewDefinitions>
        </telerik:RadScheduler>
        <!-- << scheduler-current-time-indicator -->
    </Grid>
</ContentView>
