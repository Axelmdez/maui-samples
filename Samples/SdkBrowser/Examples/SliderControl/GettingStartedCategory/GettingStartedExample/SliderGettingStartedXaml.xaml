<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.SliderControl.GettingStartedCategory.GettingStartedExample.SliderGettingStartedXaml">
    <ContentView.Resources>
        <Style TargetType="telerik:RadSlider">
            <Setter Property="HorizontalOptions" Value="{OnIdiom Default=Fill, Desktop=Center}" />
            <Setter Property="VerticalOptions" Value="{OnPlatform Default=Fill, MacCatalyst=Start, WinUI=Start}" />
            <Setter Property="WidthRequest" Value="{OnIdiom Default=-1, Desktop=800}" />
        </Style>
    </ContentView.Resources>
    <Grid Margin="{OnIdiom Default=0, Desktop='0, 40, 0, 0'}">
        <!-- >> slider-getting-started-xaml -->
        <telerik:RadSlider x:Name="slider"
                           Minimum="0"
                           Maximum="100"
                           Value="35" />
        <!-- << slider-getting-started-xaml -->
    </Grid>
</ContentView>
