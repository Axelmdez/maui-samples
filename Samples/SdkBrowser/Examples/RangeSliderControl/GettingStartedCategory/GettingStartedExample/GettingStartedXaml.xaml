<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.RangeSliderControl.GettingStartedCategory.GettingStartedExample.GettingStartedXaml">
    <ContentView.Resources>
        <Style TargetType="telerik:RadRangeSlider">
            <Setter Property="WidthRequest" Value="{OnIdiom Default=-1, Desktop=800}" />
            <Setter Property="HorizontalOptions" Value="{OnIdiom Default=Fill, Desktop=Center}" />
            <Setter Property="VerticalOptions" Value="{OnPlatform Default=Fill, MacCatalyst=Start, WinUI=Start}" />
        </Style>
    </ContentView.Resources>
    <Grid Margin="{OnIdiom Default=0, Desktop='0, 40, 0, 0'}">
        <!-- >> rangeslider-getting-started-xaml -->
        <telerik:RadRangeSlider Minimum="0"
                                Maximum="100"
                                RangeStart="25"
                                RangeEnd="95" 
                                AutomationId="rangeSlider"/>
        <!-- << rangeslider-getting-started-xaml -->
    </Grid>
</ContentView>
