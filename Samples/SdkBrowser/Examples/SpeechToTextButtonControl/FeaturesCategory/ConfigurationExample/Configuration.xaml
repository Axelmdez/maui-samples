<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.SpeechToTextButtonControl.FeaturesCategory.ConfigurationExample.Configuration">

	<ContentView.Resources>
		<ResourceDictionary>
			<Style TargetType="HorizontalStackLayout">
				<Setter Property="Spacing" Value="5" />
				<Setter Property="VerticalOptions" Value="Center" />
			</Style>

			<Style TargetType="telerik:RadSpeechToTextButton">
				<Setter Property="WidthRequest" Value="40" />
			</Style>

			<Style TargetType="Grid">
				<Setter Property="RowSpacing" Value="8" />
				<Setter Property="ColumnSpacing" Value="8" />
			</Style>
		</ResourceDictionary>
	</ContentView.Resources>
	
	<Grid RowDefinitions="Auto, Auto"
		  RowSpacing="15">
		<Grid ColumnDefinitions="*, Auto"
			  RowDefinitions="Auto, Auto, Auto">
			<HorizontalStackLayout HorizontalOptions="End"
								   Grid.ColumnSpan="2">
				<telerik:RadCheckBox x:Name="checkBoxIsContinuousRecognition"
									 IsChecked="{Binding IsContinuousRecognition, Source={x:Reference speechContinuousButton}}"
									 IsThreeState="False"
									 VerticalOptions="Center" />
				<Label Text="IsContinuousRecognition" 
					   telerik:RadCheckBox.ToggleOnTap="{x:Reference checkBoxIsContinuousRecognition}" />
			</HorizontalStackLayout>
			<!-- >> speechtotext-continuous-recognition -->
			<Editor x:Name="editor"
					AutoSize="TextChanges"
					Grid.Row="1" />
			<telerik:RadSpeechToTextButton x:Name="speechContinuousButton" 
										   IsContinuousRecognition="True"
										   SpeechRecognized="OnSpeechRecognized"
										   Grid.Column="1" 
										   Grid.Row="1"
										   VerticalOptions="Start" />
			<!-- << speechtotext-continuous-recognition -->
		</Grid>

		<Grid ColumnDefinitions="*, Auto"
			  Grid.Row="1"
			  RowDefinitions="Auto, Auto">
			<Label Text="LanguageTag set to es-ES"
				   HorizontalOptions="End"
				   Grid.ColumnSpan="2" />
			<!-- >> speechtotext-language-tag -->
			<Editor x:Name="languageEditor"
					AutoSize="TextChanges"
					Grid.Row="1"  />
			<telerik:RadSpeechToTextButton x:Name="speechToTextButton"
										   LanguageTag="es-ES"
										   SpeechRecognized="OnLanguageSpeechRecognized"
										   Grid.Column="1"
										   Grid.Row="1"
										   VerticalOptions="Start" />
			<!-- << speechtotext-language-tag -->
		</Grid>
	</Grid>
</ContentView>
