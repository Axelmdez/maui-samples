<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.PdfViewerControl.SearchCategory.ProgrammaticExample.Programmatic">
    <!-- >> pdfviewer-search-programmatic -->
    <Grid RowDefinitions="Auto, *">
        <ScrollView Orientation="Horizontal" >
            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout Spacing="10">
                    <Entry x:Name="searchText" Placeholder="Enter text to search" MinimumWidthRequest="120" TextChanged="OnTextChanged"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10">
                    <Button Text="&lt;" Command="{Binding NavigateToPreviousSearchResultCommand, Source={x:Reference pdfViewer}}"/>
                    <Button Text="&gt;" Command="{Binding NavigateToNextSearchResultCommand, Source={x:Reference pdfViewer}}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
        <telerik:RadPdfViewer x:Name="pdfViewer" Grid.Row="1" />
        <!-- << pdfviewer-search-programmatic -->
    </Grid>
</ContentView>
