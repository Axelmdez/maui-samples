<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.CheckBoxControl.FeaturesCategory.AnimationExample.Animation">
    <telerik:RadContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="HorizontalStackLayout">
                <Setter Property="VerticalOptions" Value="Start"/>
                <Setter Property="Spacing" Value="5"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </telerik:RadContentView.Resources>

    <VerticalStackLayout Spacing="10">
        <HorizontalStackLayout>
            <Label Text="CheckBox with enabled animation:" />
            <telerik:RadCheckBox />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="CheckBox with disabled animation:" />
            <!-- >> checkbox-animation -->
            <telerik:RadCheckBox IsAnimated="False" />
            <!-- << checkbox-animation -->
        </HorizontalStackLayout>
    </VerticalStackLayout>
</telerik:RadContentView>
