<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:local="clr-namespace:SDKBrowserMaui.Examples.DataPagerControl.IntegrationCategory.IntegrationDataGridExample"
             x:Class="SDKBrowserMaui.Examples.DataPagerControl.IntegrationCategory.IntegrationDataGridExample.IntegrationDataGrid">
    <!-- >> datagrid-datapager -->
    <Grid RowDefinitions="*, Auto">
        <telerik:RadDataGrid ItemsSource="{Binding PagedSource, Source={Reference dataPager}}" />
        <telerik:RadDataPager x:Name="dataPager" Source="{Binding MyData}"
                              Grid.Row="1"
                              PageSize="20" />
        <Grid.BindingContext>
            <local:ViewModel />
        </Grid.BindingContext>
    </Grid>
    <!-- << datagrid-datapager -->
</ContentView>
