<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        x:Class="SDKBrowserMaui.Examples.NumericInputControl.FeaturesCategory.KeyFeaturesExample.KeyFeatures"
                        Margin="5">
    <telerik:RadContentView.Content>
        <VerticalStackLayout WidthRequest="300" HorizontalOptions="Center">
            <Label Text="NumericInput with defined Value" Margin="0, 10, 0, 0" />
            <!-- >> numericinput-features-value -->
            <telerik:RadNumericInput Value="12" />
            <!-- << numericinput-features-value -->
            <Label Text="NumericInput with Minimum=-0 and Maximum=10" Margin="0, 10, 0, 0" />
            <!-- >> numericinput-features-minmax -->
            <telerik:RadNumericInput Minimum="0" Maximum="10" />
            <!-- << numericinput-features-minmax -->
            <Label Text="NumericInput with Step=10" Margin="0, 10, 0, 0" />
            <!-- >> numericinput-features-step -->
            <telerik:RadNumericInput Step="10" />
            <!-- << numericinput-features-step -->
            <Label Text="NumericInput with Buttons Text applied" Margin="0, 10, 0, 0" />
            <!-- >> numericinput-features-btntext -->
            <telerik:RadNumericInput IncreaseButtonText=" &gt;" 
                                     DecreaseButtonText=" &lt;" />
            <!-- << numericinput-features-btntext -->
            <Label Text="NumericInput in read-only mode" Margin="0, 10, 0, 0" />
            <!-- >> numericinput-features-readonly -->
            <telerik:RadNumericInput IsReadOnly="True" />
            <!-- << numericinput-features-readonly -->
            <Label Text="NumericInput with StringFormat" Margin="0, 10, 0, 0" />
            <!-- >> numericinput-features-stringformat -->
            <telerik:RadNumericInput StringFormat="{}{0:P2}" />
            <!-- << numericinput-features-stringformat -->
            <Label Text="NumericInput with BackgroundColor" Margin="0, 10, 0, 0" />
            <!-- >> numericinput-features-background -->
            <telerik:RadNumericInput BackgroundColor="LightYellow" />
            <!-- << numericinput-features-background -->
        </VerticalStackLayout>
    </telerik:RadContentView.Content>
</telerik:RadContentView>
