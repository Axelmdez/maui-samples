<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.BottomSheetControl.FeaturesCategory.CustomControlTemplateExample.CustomControlTemplate">
	<ContentView.Resources>
		<ResourceDictionary>
			<Style TargetType="VerticalStackLayout">
				<Setter Property="Spacing" Value="10" />
				<Setter Property="HorizontalOptions" Value="{OnPlatform Default=Start, Android=Center, iOS=Center}" />
			</Style>

			<Style TargetType="HorizontalStackLayout">
				<Setter Property="Spacing" Value="5" />
				<Setter Property="VerticalOptions" Value="Start" />
			</Style>

			<Style TargetType="Label">
				<Setter Property="VerticalOptions" Value="Center" />
			</Style>
		</ResourceDictionary>
	</ContentView.Resources>
	
	<!-- >> bottomsheet-custom-control-template -->
	<telerik:RadBottomSheet x:Name="bottomSheet">
		<telerik:RadBottomSheet.Content>
			<HorizontalStackLayout>
				<telerik:RadTemplatedButton Content="Open BottomSheet Content" 
											Clicked="OnOpenClicked"/>
				<telerik:RadTemplatedButton Content="Close BottomSheet Content" 
											Clicked="OnCloseClicked"/>
			</HorizontalStackLayout>
		</telerik:RadBottomSheet.Content>
		<telerik:RadBottomSheet.BottomSheetContent>
			<VerticalStackLayout HorizontalOptions="Center">
				<Label Text="Additional Information"
					   FontAttributes="Bold"
					   Margin="0, 10"
					   HorizontalOptions="Center" />
				<HorizontalStackLayout>
					<Label Text="Enter Name:"
						   WidthRequest="100" />
					<telerik:RadEntry WidthRequest="200" />
				</HorizontalStackLayout>
				<HorizontalStackLayout>
					<Label Text="Enter Email:"
						   WidthRequest="100" />
					<telerik:RadEmailMaskedEntry WidthRequest="200" />
				</HorizontalStackLayout>
				<HorizontalStackLayout>
					<Label Text="Accept Tearms:"
						   WidthRequest="100" />
					<telerik:RadCheckBox IsThreeState="False" />
				</HorizontalStackLayout>
				<telerik:RadTemplatedButton Content="Send Data" />
			</VerticalStackLayout>
		</telerik:RadBottomSheet.BottomSheetContent>
		<telerik:RadBottomSheet.ControlTemplate>
			<ControlTemplate>
				<Grid>
					<ContentPresenter Content="{TemplateBinding Content}" />
					<telerik:RadBorder x:Name="PART_BottomSheetContent"
									   BackgroundColor="#B2DFDB"
									   BorderColor="#00897B"
									   CornerRadius="5, 5, 0, 0"
									   BorderThickness="1">
						<ContentView Content="{TemplateBinding BottomSheetContent}" />
					</telerik:RadBorder>
				</Grid>
			</ControlTemplate>
		</telerik:RadBottomSheet.ControlTemplate>
	</telerik:RadBottomSheet>
	<!-- << bottomsheet-custom-control-template -->
</ContentView>
