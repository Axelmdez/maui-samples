<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.BottomSheetControl.FeaturesCategory.StateExample.State">
	<ContentView.Resources>
		<ResourceDictionary>
			<Style TargetType="VerticalStackLayout">
				<Setter Property="Spacing" Value="10" />
				<Setter Property="HorizontalOptions" Value="Start" />
			</Style>
			
			<Style TargetType="HorizontalStackLayout">
				<Setter Property="Spacing" Value="5" />
				<Setter Property="VerticalOptions" Value="Center" />
			</Style>

			<Style TargetType="Label">
				<Setter Property="VerticalOptions" Value="Center" />
			</Style>
		</ResourceDictionary>
	</ContentView.Resources>
	
	<!-- >> bottomsheet-state -->
	<telerik:RadBottomSheet x:Name="bottomSheet">
		<telerik:RadBottomSheet.Content>
			<VerticalStackLayout>
				<Label Text="Choose State" />
				<HorizontalStackLayout>
					<telerik:RadTemplatedButton Content="Full State" Clicked="OnFullClicked" />
					<telerik:RadTemplatedButton Content="Hidden State" Clicked="OnHiddenClicked" />
				</HorizontalStackLayout>
				<HorizontalStackLayout>
					<telerik:RadTemplatedButton Content="Partial State" Clicked="OnPartialClicked" />
					<telerik:RadTemplatedButton Content="Minimal State" Clicked="OnMinimalClicked" />
				</HorizontalStackLayout>
			</VerticalStackLayout>
		</telerik:RadBottomSheet.Content>
		<telerik:RadBottomSheet.BottomSheetContent>
			<telerik:RadBorder BorderColor="LightGray"
							   BorderThickness="1, 1, 1, 0">
				<VerticalStackLayout HorizontalOptions="Center">
					<Label Text="Additional Information"
						   FontAttributes="Bold"
						   Margin="0, 10"
						   HorizontalOptions="Center" />
					<HorizontalStackLayout>
						<Label Text="Enter Name:"
							   WidthRequest="100" />
						<telerik:RadEntry WidthRequest="200" />
					</HorizontalStackLayout>
					<HorizontalStackLayout>
						<Label Text="Enter Email:"
							   WidthRequest="100" />
						<telerik:RadEmailMaskedEntry WidthRequest="200" />
					</HorizontalStackLayout>
					<HorizontalStackLayout>
						<Label Text="Accept Tearms:"
							   WidthRequest="100" />
						<telerik:RadCheckBox IsThreeState="False" />
					</HorizontalStackLayout>
					<telerik:RadTemplatedButton Content="Send Data" />
				</VerticalStackLayout>
			</telerik:RadBorder>
		</telerik:RadBottomSheet.BottomSheetContent>
	</telerik:RadBottomSheet>
	<!-- << bottomsheet-state -->
</ContentView>
