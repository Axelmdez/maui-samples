<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:local="clr-namespace:SDKBrowserMaui.Examples.DataGridControl.ColumnsCategory.ReorderingExample"
             x:Class="SDKBrowserMaui.Examples.DataGridControl.ColumnsCategory.ResizingExample.Resizing">
    <Grid>
        <!-- >> datagrid-resizing-example -->
        <telerik:RadDataGrid x:Name="dataGrid" 
                             CanUserResizeColumns="True"
                             ColumnUserResizeCompleted="OnDataGridColumnUserResizeCompleted"
                             ItemsSource="{Binding Data}">
            <telerik:RadDataGrid.BindingContext>
                <local:ViewModel/>
            </telerik:RadDataGrid.BindingContext>
        </telerik:RadDataGrid>
        <!-- << datagrid-resizing-example -->
    </Grid>
</ContentView>
