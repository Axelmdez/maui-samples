<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:views="clr-namespace:SDKBrowserMaui.Views"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    ios:Page.UseSafeArea="True"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False"
    x:Class="SDKBrowserMaui.Pages.ControlPage">
    <Grid RowDefinitions="50, *">
        <views:HeaderView />
        <telerik:RadCollectionView x:Name="categories"
                                   Grid.Row="1"
                                   ItemsSource="{Binding Categories}"
                                   SelectionMode="None"
                                   Background="White"
                                   VerticalOptions="Start">
            <telerik:RadCollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="50,*">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="CategoryTapped" />
                        </Grid.GestureRecognizers>
                        <Image Source="bullet.png"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Aspect="Fill"
                               WidthRequest="8"
                               HeightRequest="8" />
                        <Label Grid.Column="1"
                               Text="{Binding Title}"
                               TextColor="{StaticResource DefaultTextColor}"
                               VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </telerik:RadCollectionView.ItemTemplate>
            <telerik:RadCollectionView.ItemsLayout>
                <telerik:CollectionViewLinearLayout ItemLength="40" />
            </telerik:RadCollectionView.ItemsLayout>
        </telerik:RadCollectionView>
    </Grid>
</ContentPage>
